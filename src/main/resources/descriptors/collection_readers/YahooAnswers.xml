    <vendor/>
    <configurationParameters>
      <configurationParameter>
        <name>QuestFilterRegex</name>
        <description>You can specify a regular expression to restrict a set of questions.</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>InputFile</name>
        <description>Input file.</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
      </configurationParameter>
    <configurationParameter>
        <name>MaxQty</name>
